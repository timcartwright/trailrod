<%= link_to url_with_protocol(trail.external_link) || trail_path(trail),  class: ["tile tile-short tile-narrow ripple-effect", (in_rodrigues?(trail.location) ? "tile-deep-orange" : "tile-deep-orange-inverse")], target: ("_blank" if trail.external_link.present?) do %>
  <span class="content-wrapper">
    <span class="tile-content">
      <h4 class="trail-date">
        <%= l trail.date, format: '%-d %B %Y' if trail.date %>
      </h4>
      <h2>
        <%= trail.name %>
      </h2>
      <h4>
        <% trail.events.each do |event| %>
          <%= "#{event.distance}k" %>
        <% end %>
      </h4>
      <p>
        <%= trail.description %>
      </p>
      
      <% if in_rodrigues?(trail.location) %>
        <h4>
          <%= t('trail_league.title') %>
        </h4>
      <% end %>
    </span>      
  </span>
<% end %>