<div class="tile tile-lg tile-full-width tile-flexible-height tile-light-blue">
  <span class="content-wrapper">
    <span class="tile-content">
      <h2>
        Participants
      </h2>
      <% @trail.events.each do |event| %>
      <span class="left-col">
        <h3>
          <%= "#{event.distance}k" %>
        </h3>
        <h5>
          <%= pluralize(@participants[event].count, 'participant') if @participants[event].length > 0 %>
        </h5>
        <ul>
          <% @participants[event].each do |participant| %>
            <li>
              <%= participant.full_name %>
            </li>
          <% end %>
        </ul>
      </span>
      <% end %>
    </span>      
  </span>
</div>