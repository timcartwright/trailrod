<h2>
  <%= "#{@event.trail.name} #{@event.distance}k" %>
</h2>

<% if current_user.is_admin? %>

  <div class='row'>
    <div class='col s12 m8 l8'>
      <%= render 'form' %>
    </div>

    <div class='col s12 m4 l4'>
      <div class="card-panel">
        <h4>
          Manage Database
        </h4>
        <!-- Modal Trigger -->
        <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Add</a>
        
        <%= render 'lookup_form' %>
      </div>

      <!-- Modals -->
      <div id="modal1" class="modal profile-form">
        <div class="modal-content">
          <%= render 'profiles/new_form' %>
        </div>
      </div>
      <div id="modal2" class="modal profile-form">
        <div class="modal-content">
          
        </div>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col s12'>
      <h3>
        Participants
      </h3>
      <%= render 'participants' %>
    </div>
  </div>

<% else %>

  <div class='row'>
    <div class='col s12'>
      <%= link_to "Confirm Registration", trail_event_event_registrations_path(@event.trail.id, @event.id), method: :post, class: "waves-effect waves-light btn" %>
    </div>
  </div>
  
<% end %>